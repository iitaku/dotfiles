set nocompatible
colorscheme desert
syntax on

set expandtab

set tabstop=4 shiftwidth=4 softtabstop=4
set autoindent smartindent

set wildmenu

set wrapscan
set incsearch
set hlsearch

set showcmd
set number

set termencoding=utf-8
set encoding=utf-8
set fileencodings=utf-8,euc-jp,cp932,iso-2022-jp

set visualbell t_vb=

set guioptions-=T
set guioptions-=m

set novisualbell

" GNU global
map <C-G> :Gtags<CR>

